{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Bond (Windows)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", "Bond",
        "-B", "build/Bond",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": "build"
    },
    {
      "label": "Build Bond (Windows)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build/Bond",
        "--config", "Debug"
      ],
      "group": "build",
      "dependsOn": "Configure Bond (Windows)"
    },
    {
      "label": "Configure Leg (Windows)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", "Leg",
        "-B", "build/Leg",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": "build"
    },
    {
      "label": "Build Leg (Windows)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build/Leg",
        "--config", "Debug"
      ],
      "group": "build",
      "dependsOn": "Configure Leg (Windows)"
    }
  ]
}
